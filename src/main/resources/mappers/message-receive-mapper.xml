	 <insert id="insert">
	 insert into ${message_receive}
	 (${receiveMemberId}, ${sendMemberId}, ${sendMemberNickname}, ${messageTitle}, ${messageContent})
	 values (#{receiveMemberId}, #{sendMemberId}, #{sendMemberNickname}, #{messageTitle}, #{messageContent})
	 </insert>
	 
	 <select id="select_by_message_id" resultType="MessageVO">
	 select * from ${message_receive} where ${receiveMessageId} = #{receiveMessageId}
	 </select>
	 	 
	 <select id="select_paging" resultType="MessageVO">
	 select ${receiveMessageId}, ${receiveMemberId}, ${sendMemberId}, ${sendMemberNickname}, ${messageTitle}, ${messageContent}, ${messageDateCreated}
	 from (
	 select rownum rn, a.* 
	 	from (select * from ${message_receive} where ${receiveMemberId} = #{receiveMemberId} order by ${receiveMessageId} desc)a
	 ) where rn between #{start} and #{end}
	 </select>
	 
