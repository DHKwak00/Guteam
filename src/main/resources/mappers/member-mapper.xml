	 <insert id="insert">
	 insert into ${member}
	 (${memberId}, ${password}, ${nickname}, ${email}, ${phone}, ${cash}, ${memberImageName}, ${isAdmin})
	 values (#{memberId}, #{password}, #{nickname}, #{email}, #{phone}, #{cash}, #{memberImageName}, #{isAdmin})
	 </insert>
	 
	 <select id="select_all" resultType="MemberVO">
	 select * from ${member} order by ${memberId} desc
	 </select>
	 
	 <select id="select_by_member_id" resultType="MemberVO">
	 select * from ${member} where ${memberId} = #{memberId}
	 </select>
	 
	 <select id="check_member_id" resultType="int">
	 select count(*) from ${member} where ${memberId} = #{memberId}
	 </select>
	 
	 <update id="update_member">
	 update ${member} 
	 set ${password} = #{password}, ${nickname} = #{nickname}, ${email} = #{email}, ${phone} = #{phone}, 
	 		${memberImageName} = #{memberImageName}
	 where ${memberId} = #{memberId}
	 </update>
	 
	 <update id="update_cash">
	 update ${member} set ${cash} = #{cash} where ${memberId} = #{memberId}
	 </update>
	 
	 <delete id="delete">
	 delete from ${member} where ${memberId} = #{memberId}
	 </delete>
	 
	 
</mapper>