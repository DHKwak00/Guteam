<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration
PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-config.dtd">

<configuration>
	<!-- DB 테이블과 컬럼들을 mapper에 매핑하기 위한 변수 선언 -->
	<!-- 
	* property
	- name : mapper.xml 에서 사용될 이름
	- value : DB 테이블 및 컬럼 이름
	 -->
	 
	 
	 <properties>
		<property name="board_comment" value="board_comment" />
		<property name="commentId" value="comment_id" />
		<property name="gameBoardId" value="game_board_id" />
		<property name="memberId" value="member_id" />
		<property name="commentContent" value="comment_content" />
		<property name="commentDateCreated" value="comment_date_created" />
		<property name="replyCnt" value = "reply_cnt" />
		
	 	<property name="reply" value="reply" />
	 	<property name="replyId" value="reply_id"/>
	 	<property name="commentId" value="comment_id"/>
	 	<property name="memberId" value="member_id"/>
	 	<property name="replyContent" value="reply_content"/>
	 	<property name="replyDateCreated" value="reply_date_created"/>
	 	
	 <!-- name은 vo변수와 이름 같게 -->
	 <!--  select()호출시 name에 대소문자 구분을 안함 이거 따로 mybatis에 태그 넣어줘야하는데 이거 반드시 기억 -->
	 </properties>
	 
	 <!-- undersocre 명명법을 camel 명명법으로 변환 가능하도록 세팅 -->
	<settings>
		<setting name="mapUnderscoreToCamelCase" value="true"></setting>
	</settings>
	 
	 
	 
	 <!-- typeAliasese : mapper.xml의 select 리턴 타입에 들어갈 클래스 경로를 설정 -->
	 
	 <typeAliases>
	 	<package name="project.spring.guteam.domain" />
	 </typeAliases>
</configuration>